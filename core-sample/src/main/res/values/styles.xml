<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Theme.IARSDKSamples.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.IARSDKSamples.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="long_button_style" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_margin">16dp</item>
        <item name="android:background">@drawable/round_long_button</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="main_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginBottom">@dimen/dimen_activity_edge</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/dimen_corner_round</item>
    </style>

</resources>